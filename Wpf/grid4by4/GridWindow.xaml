<Page x:Class="grid4by4.GridWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:grid4by4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GridWindow">


    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

       
        <Button Grid.Row="0" Grid.Column="0" Content="Grid" Name="ButtonGrid"  />
        <Button Grid.Row="0" Grid.Column="1" Content="StackPanel" Name="ButtonStackPanel"/>
        <Button Grid.Row="1" Grid.Column="0" Content="WrapPanel" Name="ButtonWrapPanel"/>
        <Button Grid.Row="1" Grid.Column="1" Content="DockPanel" Name="ButtonDockPanel"/>
    </Grid>
</Page>
