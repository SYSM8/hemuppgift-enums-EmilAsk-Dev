<Page x:Class="grid4by4.DockPanelWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:grid4by4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DockPanelWindow">

    <DockPanel>
        <Button Content="Överst" DockPanel.Dock="Top" Height="40"/>
        <Button Content="Vänster" DockPanel.Dock="Left" Width="80"/>
        <Button Content="Höger" DockPanel.Dock="Right" Width="80"/>
        <Button Content="Nederst" DockPanel.Dock="Bottom" Height="40"/>
        <TextBlock Text="Detta är DockPanel" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
    </DockPanel>
</Page>
