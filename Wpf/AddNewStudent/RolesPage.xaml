<Page x:Class="AddNewStudent.RolesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RolesPage">

    <Grid Height="700" Width="900" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Increased dimensions -->
        <Rectangle Fill="White" Margin="-46,-84,-46,-85"/>
        <TextBlock Text="Manage User Roles" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

        <Rectangle HorizontalAlignment="Center" Height="2" Fill="Black" VerticalAlignment="Top" Width="414" Margin="0,50,0,0"/>

        <StackPanel Margin="0,70,0,0" HorizontalAlignment="Center" Width="500">
            <!-- Adjusted width for StackPanel -->
            <ListBox x:Name="RolesListBox" Height="250" Margin="0,0,0,10"/>
            <!-- Increased ListBox height -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="NewRoleTextBox" Width="200" Margin="0,0,10,0" GotFocus="NewRoleTextBox_GotFocus" LostFocus="NewRoleTextBox_LostFocus"/>
                <Button Content="Add Role" Click="AddRole_Click" Width="75" Margin="0,0,5,0"/>
                <Button Content="Remove Selected Role" Click="RemoveRole_Click" Width="150"/>
            </StackPanel>
        </StackPanel>

        <!-- White rectangle filling background -->
    </Grid>
</Page>
